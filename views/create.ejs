<% layout('layout/boilerplate') %>
    <h1>Create a New Post</h1>
    <br>
    <form action="/posts" method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" placeholder="Title">

        <br>
        <label for="text">Post Content:</label>
        <section>
            <textarea name="text" id="text" cols="100" rows="10" placeholder="Say what you want to say here"></textarea>
        </section>
        <label for="inputGroupFile03">Image Upload: </label>
        <div class="input-group mb-3">
            <input name="img" type="file" class="form-control" id="inputGroupFile03"
                aria-describedby="inputGroupFileAddon03" aria-label="Upload">
        </div>
        <button class="btn btn-outline-secondary">Post</button>
    </form>
    <a class="mt-3 btn btn-outline-secondary" href="/posts">Back to All Posts</a>



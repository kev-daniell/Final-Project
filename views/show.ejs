<% layout('layout/boilerplate') %>

    <div class="mt-3 card <%= viewMode ==='light' ? " text-dark bg-light mb-3" : "text-white bg-dark mb-3" %>">
        <div class="card-body">
            <p class="card-text">
                User: <a href="##">
                    <%= post.author %>
                </a>
            </p>
            <div class="d-flex w-100 justify-content-between">
                <h4 class="card-title">
                    <%= post.title %>
                </h4>
                <small class="text-muted">5 days ago</small>
            </div>
            <% if(post.image){ %>
                <img class="card-img-top" src="<%= post.image %>" alt="pic">
                <% } %>
                    <p class="card-text">
                        <%= post.text %>
                    </p>
                    <a href="/posts" class="btn btn-outline-secondary">Back to All
                        Posts</a>
                    <% if(post.author==="k6daniel" ){ %>
                        <a class="btn btn-outline-secondary" href="/posts/<%= post._id %>/edit">Edit</a>
                        <% } %>
        </div>
    </div>

    <form action="/posts/<%=post._id%>/comment" method="POST">
        <label for="text">Make a Comment: </label>
        <textarea class="form-control" name="text" id="text" placeholder="What do you think about this post?" cols="30"
            rows="10"></textarea>
        <button class="btn btn-outline-secondary mt-3 mb-5">Comment</button>
    </form>